{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Azure.Security.KeyVault": "Information",
      "Azure.Identity": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "KeyVault": {
    "VaultUri": "https://secureshop-kv-[NUMBER].vault.azure.net/",
    "ManagedIdentityClientId": "[CONFIGURAR-EN-PRODUCCION]"
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SecureShopKeyVault;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "yourdomain.onmicrosoft.com",
    "TenantId": "[CONFIGURAR-EN-KEY-VAULT]",
    "ClientId": "[CONFIGURAR-EN-KEY-VAULT]",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  },
  
  "Encryption": {
    "DataProtectionKey": "[CONFIGURAR-EN-KEY-VAULT]"
  },
  
  "ExternalServices": {
    "PaymentGatewayKey": "[CONFIGURAR-EN-KEY-VAULT]",
    "EmailServiceKey": "[CONFIGURAR-EN-KEY-VAULT]"
  },
  
  "Authentication": {
    "JwtSigningKey": "[CONFIGURAR-EN-KEY-VAULT]"
  },
  
  "Features": {
    "EnableKeyVaultIntegration": true,
    "EnableSecretCaching": true,
    "SecretCacheExpirationMinutes": 5,
    "EnableSecretRotation": true
  },
  
  "Security": {
    "RequireHttps": true,
    "EnableStrictTransportSecurity": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
  }
}